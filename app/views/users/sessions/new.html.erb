<div class="min-vh-100 d-flex align-items-center justify-content-center px-3" style="padding-top: 80px; padding-bottom: 30px;">
  <div class="w-100" style="max-width: 400px;">

    <!-- Header -->
    <div class="card border-dark border-3 shadow">
      <div class="card-header bg-warning border-dark text-center py-3">
        <h2 class="fw-bold mb-0">üîê Log in</h2>
      </div>

      <div class="card-body p-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <!-- Email -->
          <div class="mb-3">
            <label class="form-label fw-bold">Email</label>
            <%= f.email_field :email, class: "form-control border-dark border-2 py-2", required: true, autofocus: true %>
          </div>

          <!-- Password -->
          <div class="mb-3">
            <label class="form-label fw-bold">Password</label>
            <%= f.password_field :password, class: "form-control border-dark border-2 py-2", required: true %>
          </div>

          <!-- Remember me -->
          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-4">
              <%= f.check_box :remember_me, class: "form-check-input border-dark" %>
              <label class="form-check-label">Remember me</label>
            </div>
          <% end %>

          <!-- Submit -->
          <div class="d-grid mb-3">
            <%= f.submit "Log in", class: "btn btn-warning border-dark border-2 fw-bold py-3 fs-5" %>
          </div>

        <% end %>

        <!-- Links -->
        <div class="text-center">
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-dark fw-bold w-100 mb-2" %>
          <%= link_to "Forgot your password?", new_user_password_path, class: "text-muted small" %>
        </div>

      </div>
    </div>

    <!-- Back link -->
    <div class="text-center mt-4">
      <%= link_to "‚Üê Back to Home", root_path, class: "btn btn-outline-dark fw-bold" %>
    </div>

  </div>
</div>
