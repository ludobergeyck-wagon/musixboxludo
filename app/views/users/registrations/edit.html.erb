<div class="min-vh-100 d-flex align-items-center justify-content-center px-3" style="padding-top: 80px; padding-bottom: 30px;">
  <div class="w-100" style="max-width: 450px;">
  
    <!-- Header -->
    <div class="card border-dark border-3 mb-4 shadow">
      <div class="card-header bg-warning border-dark border-bottom-2 py-3">
        <h2 class="fw-bold mb-0 text-center">‚öôÔ∏è Edit Account</h2>
      </div>
      
      <div class="card-body p-4">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <!-- Avatar -->
          <div class="text-center mb-4">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, class: "rounded-circle mb-3 border border-dark border-3", style: "width: 100px; height: 100px; object-fit: cover;" %>
            <% else %>
              <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center mx-auto mb-3 border border-dark border-3" style="width: 100px; height: 100px; font-size: 2.5rem;">
                üë§
              </div>
            <% end %>
            
            <div class="mb-3">
              <label class="form-label fw-bold">Profile photo</label>
              <%= f.file_field :avatar, class: "form-control border-dark border-2" %>
            </div>
          </div>

          <hr class="border-dark my-4">

          <!-- Email -->
          <div class="mb-3">
            <label class="form-label fw-bold">Email</label>
            <%= f.email_field :email, class: "form-control border-dark border-2 py-2", required: true %>
          </div>

          <hr class="border-dark my-4">

          <!-- Password -->
          <div class="mb-3">
            <label class="form-label fw-bold">New password</label>
            <%= f.password_field :password, class: "form-control border-dark border-2 py-2", autocomplete: "new-password" %>
            <small class="text-muted">Leave blank if you don't want to change</small>
          </div>

          <div class="mb-3">
            <label class="form-label fw-bold">Confirm password</label>
            <%= f.password_field :password_confirmation, class: "form-control border-dark border-2 py-2", autocomplete: "new-password" %>
          </div>

          <hr class="border-dark my-4">

          <!-- Current password -->
          <div class="mb-4">
            <label class="form-label fw-bold">Current password *</label>
            <%= f.password_field :current_password, class: "form-control border-dark border-2 py-2", autocomplete: "current-password", required: true %>
            <small class="text-muted">Required to confirm changes</small>
          </div>

          <!-- Submit -->
          <div class="d-grid">
            <%= f.submit "Update", class: "btn btn-warning border-dark border-2 fw-bold py-3 fs-5" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Danger zone -->
    <div class="card border-danger border-2 mb-4 shadow-sm">
      <div class="card-header bg-danger text-white py-2">
        <h5 class="mb-0 fw-bold">‚ö†Ô∏è Danger Zone</h5>
      </div>
      <div class="card-body p-3">
        <p class="text-muted mb-3 small">Once you delete your account, there is no going back.</p>
        <%= button_to "Delete my account", registration_path(resource_name), 
            method: :delete, 
            data: { turbo_confirm: "Are you sure?" }, 
            class: "btn btn-outline-danger fw-bold w-100" %>
      </div>
    </div>

    <!-- Back link -->
    <div class="d-grid">
      <%= link_to profile_path, class: "btn btn-outline-dark fw-bold py-2" do %>
        ‚Üê Back to Profile
      <% end %>
    </div>

  </div>
</div>
