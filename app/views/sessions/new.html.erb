<%= simple_form_for :session, url: sessions_path, method: :post, data: { controller: "session" } do |f| %>
  <div class="bg-session vh-100 position-relative overflow-hidden d-flex flex-column px-3 pb-4" style="padding-top: 70px;">
    
    <div class="shape-1"></div>
    <div class="shape-2"></div>
    <div class="shape-3"></div>

    <header class="text-center mb-2 position-relative z-1 flex-shrink-0">
      <h1 class="page-title mb-0 text-dark">Select your playlist</h1>
    </header>

    <%= hidden_field_tag :mode, params[:mode] %>
    <%= f.hidden_field :playlist_id, data: { session_target: "hiddenPlaylist" } %>
    <%= f.hidden_field :number_of_questions, data: { session_target: "hiddenCount" } %>

    <!-- Paramètres -->
    <div class="d-flex justify-content-center gap-4 mb-3 position-relative z-1 flex-shrink-0">
      <div class="text-center">
        <div class="section-title mb-1">Songs</div>
        <div class="d-inline-flex align-items-center gap-2">
          <button type="button" data-action="click->session#decrement" class="counter-btn rounded-3 fw-bold fs-5 text-dark">−</button>
          <span data-session-target="value" class="counter-value text-center fw-bold fs-4 text-dark">5</span>
          <button type="button" data-action="click->session#increment" class="counter-btn rounded-3 fw-bold fs-5 text-dark">+</button>
        </div>
      </div>

      <div class="text-center">
        <div class="section-title mb-1">Years</div>
        <%= f.input :year_filter, 
            collection: [
              ["All", "all"],
              ["2020-Now", "2020s"],
              ["2010s", "2010s"],
              ["2000s", "2000s"],
              ["90s", "90s"],
              ["80s", "80s"],
              ["70s", "70s"]
            ],
            prompt: "Select",
            label: false,
            wrapper: false,
            input_html: { class: "form-select rounded-3 text-center fw-bold" }
        %>
      </div>
    </div>

    <!-- Playlists groupées -->
    <div class="flex-grow-1 overflow-y-auto overflow-x-hidden position-relative z-1 mb-3">
      <% @playlist_groups.each do |category, playlists| %>
        <% if playlists.any? %>
          <div class="mb-3">
            <div class="section-title mb-2"><%= category %></div>
            <div class="row g-2">
              <% playlists.each do |playlist| %>
                <div class="col-4 col-md-3">
                  <input type="radio" name="session[playlist_radio]" id="playlist_<%= playlist.id %>" value="<%= playlist.id %>" class="d-none" data-session-target="playlist" data-action="change->session#select">
                  <label for="playlist_<%= playlist.id %>" class="playlist-card d-block w-100 py-2 rounded-3 text-center fw-bold">
                    <%= playlist.title %>
                  </label>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Submit -->
    <div class="d-flex justify-content-center flex-shrink-0 position-relative z-1">
      <%= f.submit "Start!", class: "btn-submit w-100 py-3 rounded-3 text-uppercase fw-bold" %>
    </div>

  </div>
<% end %>
