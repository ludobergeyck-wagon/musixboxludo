<div class="min-vh-100 px-3" style="padding-top: 80px; padding-bottom: 30px;">
  <div class="container" style="max-width: 500px;">

    <!-- Header -->
    <div class="card border-dark border-2 mb-4 shadow">
      <div class="card-header bg-warning border-dark text-center py-3">
        <h1 class="fw-bold mb-1"><%= @playlist.title %></h1>
        <span class="badge bg-dark"><%= @playlist.songs.count %> songs</span>
      </div>
    </div>

    <!-- Formulaire recherche -->
    <div class="card border-dark border-2 mb-4 shadow-sm">
      <div class="card-body p-3">
        <h5 class="fw-bold mb-3">üîç Add songs</h5>
        <%= simple_form_for :search, url: search_songs_path, method: :get do |f| %>
          <%= f.hidden_field :playlist_id, value: @playlist.id %>
          <div class="input-group">
            <%= f.input_field :query, class: "form-control border-dark border-2", placeholder: "Search a song..." %>
            <%= f.submit "Search", class: "btn btn-warning border-dark border-2 fw-bold" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Liste des chansons -->
    <div class="card border-dark border-2 shadow-sm">
      <div class="card-header bg-light border-dark">
        <h5 class="fw-bold mb-0">üéµ Songs</h5>
      </div>
      <div class="card-body p-0">
        <% if @playlist.songs.any? %>
          <ul class="list-group list-group-flush">
            <% @playlist.songs.each do |song| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-bold"><%= song.title %></div>
                  <small class="text-muted"><%= song.artist %></small>
                </div>
                <%= button_to playlist_song_path(@playlist, song), method: :delete, class: "btn btn-outline-danger btn-sm", data: { turbo_confirm: "Remove this song?" } do %>
                  üóëÔ∏è
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="text-center text-muted py-4">
            <p class="fs-1 mb-2">üéß</p>
            <p>No songs yet. Search and add some!</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Back link -->
    <div class="text-center mt-4">
      <%= link_to "‚Üê Back to My Playlists", my_playlists_path, class: "btn btn-outline-dark fw-bold" %>
    </div>

  </div>
</div>
